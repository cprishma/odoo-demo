<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_wizard_sale_order_form" model="ir.ui.view">
        <field name="name">view.wizard.sale.order.form</field>
        <field name="model">sale.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>

                </group>
                    <field name="product_name_ids">
                        <tree editable="bottom">
                            <field name="product_name_id"/>
                            <field name="description"/>
                            <field name="quantity"/>
                            <field name="unit_price"/>
                            <field name="subtotal"/>
                            <field name="wid" invisible="1"/>
                        </tree>
                    </field>
                <footer>
                    <button name="button_confirm" string="update" type="object"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
